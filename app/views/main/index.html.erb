<div class="container">
  <h1>Últimos Tableros</h1>
  <div class="row">
    <% @latest_boards.each do |board| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= board.board_name %></h5>
            <p class="card-text">Descripción u otra información sobre el tablero...</p>
            <%= link_to "Ver más", board_path(board), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
